@model Product

@{
    ViewData["Title"] = "Product - Create";
}
<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ImageSource">ImageSource</label>
        <input class="form-control" asp-for="ImageSource">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>